{
    "name": "advomatic/advostarter-d8",
    "description": "Project template for Drupal 8 sites built with the Lightning distribution on Pantheon.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/coder": "8.*",
        "symfony/css-selector": "~2.8",
        "composer/composer": "^1.3",
        "drush/drush": "^8.0",
        "drupal/console": "^1.0"
    },
    "require": {
        "php": "~7.1.0",
        "acquia/lightning": "~3.0.0",
        "composer/installers": "^1.0",
        "drupal/admin_toolbar": "^1.19",
        "drupal/components": "^1.0",
        "drupal/config_perms": "^1.0",
        "drupal/config_split": "^1.0",
        "drupal/contribute": "^5.0@beta",
        "drupal/devel": "^1.2",
        "drupal/field_group": "^1.0",
        "drupal/focal_point": "^1.0@beta",
        "drupal/paragraphs": "^1.1",
        "drupal/prlp": "^1.3",
        "drupal/redirect": "^1.0",
        "drupal/redis": "^1.0",
        "drupal/search_api_pantheon": "~1.0",
        "drupal/security_review": "1.x-dev",
        "drupal/stage_file_proxy": "^1.0",
        "drupal/styleguide": "^1.0",
        "oomphinc/composer-installers-extender": "^1.1"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "dev": {
            "type": "vcs",
            "url": "https://github.com/acquia/lightning-dev"
        }
    },
    "scripts": {
      "post-install-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-update-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-autoload-dump": [
        "find web/modules web/libraries web/themes web/profiles vendor -name .git -type d | xargs rm -rf # Don't allow submodules because it breaks Pantheon."
      ]
    },
    "config": {
        "bin-dir": "bin/",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "installer-types": [
          "bower-asset",
          "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/libraries/{$name}/": [
              "type:drupal-library",
              "type:bower-asset",
              "type:npm-asset"
            ]
        },
        "enable-patching": true
    }
}
